<div class="bg-white">   
  <div class="row">
    <div class="col-6 devider-verticle">
      <h2>Sign up</h2>
      <hr>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.input :first_name,:label => 'First Name', required:true, autofocus: true %>
          <%= f.input :last_name,:label => 'Last Name', required:true %>
          <%= f.input :email, :label => 'Email', required: true, placeholder: 'user@domain.com'  %>
          <%= f.input :password, :label => 'Password', required: true,placeholder:'********' %>
          <%= f.input :password_confirmation, :label => 'Confirm Password', required: true,placeholder:'*********' %>
          <%= f.file_field :avatar %> 
        </div>
        
        <div class="actions">
          <br><%= f.button :submit, class: 'btn btn-primary'%>
        </div>
    </div>
  </div>
    <% end %>
  <%= render "devise/shared/links" %>
</div>


