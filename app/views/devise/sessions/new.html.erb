<div class="row">
  <div class="col-6 devider-verticle">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%= f.input :email, :label => 'Email', required: true, autofocus: true, placeholder: 'user@domain.com' %>
      <%= f.input :password, :label => 'Password', required: true,placeholder: '**********' %>
    </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <%end%>
      <div class="actions">
        <%= f.button :submit,"Login" %>
      </div>
      <div>
        <%= render "devise/shared/links" %>
      </div>
  </div>
  <div class="col-6">
    <h3>Our Services</h3>
  </div>
</div>
<% end %>

