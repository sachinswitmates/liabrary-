<div class="row">
  <div class="col-12">
    <%= simple_form_for(@review) do |form| %>
     <div class="row">
        <div class="col-6">
          <%= form.hidden_field :user_id %>
          <%= form.hidden_field :library_id,:value => params[:library_id]%>
          <%= form.label :rating %>
          <%= form.number_field :rating %>
          <%= form.label :comment %>
          <%= form.text_area :comment %>
        </div>
      </div>
      <%= form.submit @review.id ? 'Update' : 'Save' ,class: 'btn btn-primary' %>
    <%end%>
  </div>
</div>