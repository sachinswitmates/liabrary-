<div class="bg-white">     
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-8">
          <h3><%=@library.name %></h3>
        </div>
        <div class="col-4 text-right">
        </div>
      </div>
    </div>
  </div>
  <hr>
</div>
<%= render partial: '/library_owner/libraries/image_items', locals: {images: @images} %>
<%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track": false %>
<div class="card">
  <div class="card-body">
    <p class="card-text"><strong>Name: </strong><%= @library.name %></p>
    <p class="card-text"><strong>Address:</strong><%= @library.library_address %></p>
    <p class="card-text"><strong>Open: </strong><%= @library.open %></p>
    <p class="card=text"><strong>Seats: </strong><%= @library.seats %></p>
    <p class="card-text"><strong>Contact Number: </strong><%= @library.contact_number %></p>
    Average Rating :
    <div class='star-rating' data-score=<%= @avg_rating %>></div>
      <em><%= "#{@reviews.count} reviews" %></em>
      <p><%=link_to 'show reviews',view_reviews_student_library_path(@library)%></p>
    </div>
    <%= link_to 'Back', student_libraries_path %> 
  </div>
</div>
<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
          return $(this).attr('data-score');
  }
});
</script>

