<div class="row">
  <div class="col-12 text-right">
    <%= link_to 'Add', new_admin_library_path, class: 'btn btn-primary'  %>
  </div>
</div>
<h1>Listing Libraries</h1>
 
<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>opens</th>
    <th>Seats</th>
    <th>Availability</th>
    <th colspan="5"></th>
  </tr>
  <% @libraries.each do |library| %>
    <tr>
      <td><%= library.name %></td>
      <td><%= library.address %></td>
      <td><%= library.open %></td>
      <td><%= library.seats %></td>
      <td><%= library.availability %></td>
      <td><%= link_to 'Show', admin_library_path(library)  %></td>
      <% if current_user && current_user.admin? %>
      <td><%= link_to 'Edit', edit_admin_library_path(library) %></td>
      <td><%= link_to 'Destroy', admin_library_path(library),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
    </tr>

  <% end %>
</table>


