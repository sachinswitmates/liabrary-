<div class="bg-white">
  <div class="row">
    <div class="col-12"> 
      <%= simple_form_for([:admin, @library]) do |form| %>
        <div class="row">
          <div class="col-6">
            <%= form.input :name,autofocus: true,placeholder: 'Libraryname' %>
            <%= form.input :address1 %>
            <%= form.input :address2 %>
            <%= form.input :landmark %>
            <%= form.input :state ,collection: states.map { |c| [c[0], c[1]] } %>
            <%= form.input :city %>
            <%= form.input :monthly %>
            <%= form.input :quaterly %>
            <%= form.input :halfyearly %>
            <%= form.input :yearly %> 
          </div>
            <div class= "col-6">
              <%= form.input :zip_code %>
              <%= form.input :open,hint: 'No sepical characters',placeholder: '8AM-11PM'%>
              <%= form.input :seats ,collection: 0..1000%>
              <%= form.input :contact_number %>
              <%= form.check_box :published, value: true %>
              <%= form.label :published %>
            </div>
        </div>
          <div class='text-right'>
            <%= form.submit @library.id ? 'Update' : 'Save', class: 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>