<div class="bg-white">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for([:library_owner, @library]) do |form| %>
        <div class="row">
          <div class="col-6">
            <%= form.input :name,autofocus: true,placeholder: 'YourLibraryname'%>
            <%= form.input :address1 %>
            <%= form.input :address2 %>
            <%= form.input :landmark %>
            <%=form.label :state %>
            <%= form.select :state ,options_for_select(states),{}, class: 'form-control' %><br>
            <%#= form.input :state ,collection: states.map { |c| [c[0], c[1]] } %>
            <%= form.input :city %>
            <%= form.label :Packages %>
            <%= form.input :monthly %>
            <%= form.input :quaterly %>
            <%= form.input :halfyearly %>
            <%= form.input :yearly %>
            
          </div>
            <div class="col-6">
              <%= form.input :zip_code %>
              <%= form.input :open,hint: 'No sepical characters',placeholder:'8AM-11PM'%>
              <%= form.input :seats ,collection: 0..1000 %>
              <%= form.input :availability,collection: 1..1000 %> 
              <%= form.input :contact_number %>
              <%= form.hidden_field :user_id, value: current_user.id %>
              <div id="images">
                <%= form.simple_fields_for :images do |image| %>
                <%= render 'image_fields', f: image %>
                <% end %>
                <div class="links">
                  <%= link_to_add_association 'add image', form, :images %>
                </div>
              </div>
            </div>
        </div>
        <div class="text-right">
          <%= form.submit @library.id ? 'Update' : 'Save', class: 'btn btn-primary' %> 
        </div>
      <% end %>
    </div>
  </div>
</div>